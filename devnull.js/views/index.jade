extends layout

block content
    div(class='row')
        div(class='span6')
            div(class='page-header')
                h1 Applications

            a(href='/zuul')
                h3 Zuul
                img(src='/images/zuul/zuul.png', class='img-polaroid')
            p(class="stacked")
                |Zuul is a free, open source web application which can be used to centralize and
                |manage configuration for your internal applications. It enables your operations
                |team to control changes and your developers a centralized place to organize settings.
            a(class='btn btn-primary', href='/zuul') More
        div(class='span6')
            div(class='page-header')
                h1 News
            ul.media-list
                each article in newsList
                    li.media.discoverable-container
                        img(src='/images/icons/news.png', class='media-object pull-left')
                        div(class='media-body')
                            h4(class='media-heading') #{article.title}
                                small #{article.happened.toDateString()}
                            blockquote.muted by #{article.author}
                            div(class='media') !{markdown(article.content)}


    script
        $(function () {
            selectTab("#home");
        });